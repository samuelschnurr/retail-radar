{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "npm",
            "script": "build",
            "group": "build",
            "presentation": {
                "clear": true,
                "panel": "shared",
                "showReuseMessage": false
            }
        },
        {
            "label": "Install",
            "type": "npm",
            "script": "install",
            "presentation": {
                "clear": true,
                "panel": "shared",
                "showReuseMessage": false
            }
        },
        {
            "label": "Lint: Check for problems",
            "type": "shell",
            "problemMatcher": "$eslint-stylish",
            "command": "npx eslint \"./src/**\"",
            "presentation": {
                "clear": true,
                "panel": "shared",
                "showReuseMessage": false
            }
        },
        {
            "label": "Lint: Fix all auto-fixable problems",
            "type": "shell",
            "problemMatcher": "$eslint-stylish",
            "command": "npx eslint --fix \"./src/**\"",
            "presentation": {
                "clear": true,
                "panel": "shared",
                "showReuseMessage": false
            }
        }
    ]
}
